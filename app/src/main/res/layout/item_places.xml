<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/place_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <ImageView
        android:id="@+id/ivPlaces"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlacesMain"
        style="@style/mediumBlack14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:text="Address1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPlaces"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlacesSub"
        android:layout_marginTop="@dimen/_5sdp"
        style="@style/lightBlack12"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:text="Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPlaces"
        app:layout_constraintTop_toBottomOf="@+id/tvPlacesMain" />

    <View
        android:id="@+id/vw1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/quantum_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPlaces"
        app:layout_constraintTop_toBottomOf="@id/tvPlacesSub" />

    <View
        android:id="@+id/vw2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/quantum_grey50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivPlaces"
        app:layout_constraintTop_toBottomOf="@id/tvPlacesSub" />

</androidx.constraintlayout.widget.ConstraintLayout>

